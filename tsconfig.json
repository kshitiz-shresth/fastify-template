{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "src/**/*.hbs"  // Include .hbs files in the TypeScript compilation process
, "knexfile.js"  ],
  "exclude": [
    "node_modules"
  ]
}
